escape: sub[,/(
  `&` "&amp;"
  `'` "&#39;"
  `<` "&lt;"
  `>` "&gt;"
  `"` "&#34;")]
elt:{"<$x>$y</$x>"}
ln:{elt[`tr`;+/elt[x;]'y]}
table:{th:ln["th";] x; tds:"\n"/ln["td";]'y; "<table>\n$th\n$tds\n</table>\n"}
